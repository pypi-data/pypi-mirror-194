      <field name="model_id" ref="model_sm_rewards_sm_reward"/>
      <field name="binding_model_id" ref="model_sm_rewards_sm_reward"/>
      <field name="state">code</field>
      <field name="code">action = model.complete_reward_action()</field>
    </record>

    <record id="find_reservation_rewards_workflow" model="ir.actions.server">
      <field name="name">Find related reservation</field>
      <field name="type">ir.actions.server</field>
      <field name="model_id" ref="model_sm_rewards_sm_reward"/>
      <field name="binding_model_id" ref="model_sm_rewards_sm_reward"/>
      <field name="state">code</field>
      <field name="code">action = model.find_related_reservation_action()</field>
    </record>

  </data>
</odoo>
