#%Module -*- tcl -*-

proc ModulesHelp { } {
  puts stderr "\tSets up the PYTHONPATH for xchembku commands."
}

module-whatis "sets up the PYTHONPATH for xchembku commands"

# The xchembku pip environment we want to use.
set xchembku_version 1.4.1

# Provide xchembku runtime python modules.
# This is python 3.9, so must agree with whatever the science environment has installed.
prepend-path	PYTHONPATH		/dls_sw/apps/xchem/pippy_place/xchembku/$xchembku_version
 